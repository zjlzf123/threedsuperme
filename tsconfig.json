{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": ["dom", "ES2017"],
    "declaration": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules/"]
}
